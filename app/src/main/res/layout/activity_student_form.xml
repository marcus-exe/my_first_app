<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText android:id="@+id/activity_student_form_name"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="Name"
        android:inputType="textCapWords"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/activity_student_form_number"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="Number"
        android:inputType="phone"
        android:layout_height="wrap_content"/>
    <EditText android:id="@+id/activity_student_form_email"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"/>

    <Button android:id="@+id/activity_student_form_button_save"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:text="Save"
        android:layout_height="wrap_content"/>
    
</LinearLayout>